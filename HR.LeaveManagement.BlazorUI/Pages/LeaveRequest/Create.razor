@page "/LeaveRequest/Create"

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Create Leave Type</h3>
        <hr />
        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Message))
                {
                    <div class="alert alert-danger" role="alert">
                        @Message
                    </div>
                }
                <EditForm Model="@ViewModel" OnValidSubmit="CreateHandler">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    <ValidationSummary></ValidationSummary>

                    <div class="mb-3">
                        <label for="inputStartDate" class="form-label">Start Date</label>
                        <InputDate class="form-control" id="inputStartDate" @bind-Value="ViewModel.StartDate" />
                        <ValidationMessage For="@(()=>ViewModel.StartDate)"></ValidationMessage>
                    </div>

                    <div class="mb-3">
                        <label for="inputEndDate" class="form-label">End Date</label>
                        <InputDate class="form-control" id="inputEndDate" @bind-Value="ViewModel.EndDate" />
                        <ValidationMessage For="@(()=>ViewModel.EndDate)"></ValidationMessage>
                    </div>

                    <div class="mb-3">
                        <label for="inputLeaveType" class="form-label">Leave Type</label>
                        <InputSelect class="form-control" id="inputLeaveType" @bind-Value="ViewModel.LeaveTypeId">
                            <option>Please Choose Leave Type</option>
                            @foreach (var leaveType in LeaveTypes)
                            {
                                <option value="@leaveType.Id">@leaveType.Name</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(()=>ViewModel.StartDate)"></ValidationMessage>
                    </div>

                    <div class="mb-3">
                        <label for="inputComment" class="form-label">Comment</label>
                        <InputTextArea class="form-control" id="inputComment" @bind-Value="ViewModel.Comment" />
                        <ValidationMessage For="@(()=>ViewModel.Comment)"></ValidationMessage>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>